#!/usr/bin/env bash

main() {
  local args=()
  for f in "$@" ; do
    [[ -d "$f" ]] && continue
    [[ ! -e "$f" ]] && continue
    args+=("$f")
  done
  while read -r f; do
    # f=$(echo $f |sed -e 's,\*,,g')
    f=${f/\*/}
    # echo -e "$f" 1>&2
    [[ -d "$f" ]] && continue
    [[ ! -e "$f" ]] && continue
    args+=("$f")
  done
  local _count=${#args[@]}
  if [[ $_count -eq 0 ]]; then
    echo "==> No target to edit." 1>&2
    return
  fi
  if [[ ${OSTYPE} == "msys" ]]; then
    echo "==> Edit!! ${args[*]}" 1>&2
    $HOME/.dot/bin/gvim "${args[@]}"
  else
    echo vim -p "${args[@]}" |tee >(clip)
    sleep 0.1
    # stty sane
  fi
}
main "$@"

