#!/usr/bin/env bash

fire() {
  if [[ $1 == "-c" ]]; then
    git_last_commit_files "${@:2}"
    return
  fi
  git_mod "$@"
}

main() {
  # # git_root_dir=$(get_git_root)
  # dir_name=$(
  #   fire "$@" |
  #     # -r: no run if no input
  #     xargs -r dirname |
  #     uniq |
  #     fzf -0 -1
  #     # sed "s|^|$git_root_dir/|"
  # )
  # [[ -z $dir_name ]] && return
  # echo "$git_root_dir/$dir_name"
  fire "$@" |
    # -r: no run if no input
    xargs -r dirname |
    uniq |
    fzf -0 -1
  # sed "s|^|$git_root_dir/|"
}
main "$@"
