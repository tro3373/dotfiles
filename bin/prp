#!/usr/bin/env -S bash -e

command_name=$(basename "$0") && readonly command_name
dst=/tmp/"$command_name".tmp.md && readonly dst
edit=1

fire() {
  find "$HOME"/.mo/prompt/ -type f -name '*.md'
}

usage() {
  cat <<EOF
Usage: $command_name [OPTION] [fuzzy query for filter prompts]

Options:
  -h, --help  Display this help and exit
  -ne         No Edit. Cat only

EOF
}

initialize() {
  while true; do
    [[ -z $1 ]] && break
    case "$1" in
      -h | --help) usage && exit 0 ;;
      -ne) edit=0 ;;
      *) add_args "$1" ;;
    esac
    shift
  done
}
add_args() { args+=("$@"); }
main() {
  initialize "$@"
  set -euo pipefail
  local f
  f=$(
    fire |
      fzf --preview 'bat --color=always --style=header,grid --line-range :500 {}' \
        --query "${args[*]}" \
        --select-1 --exit-0
  )
  [[ -z $f ]] && return 0

  cat <"$f" >"$dst"
  if [[ -p /dev/stdin ]]; then
    cat <&0 >>"$dst"
  fi

  [[ $edit -ne 1 ]] && {
    cat "$dst"
    return 0
  }
  nvim "$dst"
}
main "$@"
