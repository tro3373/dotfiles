#!/usr/bin/env bash

# current_dir=$(pwd)
# script_dir=$(cd $(dirname $0); pwd)
command_name=$(basename $0)
dotpath=${DOTPATH:-~/.dot}
args=()

usage() {
  cat <<EOF
Generate new apps dir and config file.
  Usage:
      $command_name [option] <NewAppName>
    Options
      -h|--help : Show this usage
EOF
}

has() { command -v ${1} >& /dev/null; }
add_args() { args=("${args[@]}" "$@"); }
#add_args() { args+=("$@"); }

initialize() {
  while true; do
    [[ -z $1 ]] && break
    case "$1" in
      -h|--help) usage && exit 0  ;;
      #-f*|--file*) file=${1#*=} ;;
      #-f|--file) shift && file=$1 ;;
      *) add_args "$1"            ;;
    esac
    shift
  done
  # all_args="${args[@]}"
}

gen_config() {
  local file=$1
  cat <<EOF>>$file
#!/usr/bin/env bash

EOF
chmod 755 $file
}

main() {
  initialize "$@"
  for arg in "${args[@]}"; do
    local app_path=$dotpath/apps/$arg
    if [[ -e $app_path ]]; then
      echo "Already $arg exist in $dotpath/apps" 1>&2
      continue
    fi
    mkdir -p $app_path
    gen_config $app_path/config
    echo "===> Generated $app_path/config"
  done
}
main "$@"

