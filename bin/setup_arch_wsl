#!/usr/bin/env bash

readonly base_url=http://ftp.jaist.ac.jp/pub/Linux/ArchLinux/iso/latest/
readonly dstd=$HOME/win/wsl

dl_extract_iso() {
  local url=$(get_arch_iso_url_latest)
  echo "> Downloading to $tmp from $url.." 1>&2
  curl -LO $url
  sudo tar -xzf ./*.tar.gz
  cd root.x86_64
  local tgz=ArchLinux.tar.gz
  sudo tar -czvf $tgz .
  echo "$(pwd)/$tgz"
}

get_arch_iso_url_latest() {
  local fname=$(
    curl -fSsL $base_url |
      grep href |
      grep --color 'tar.gz"' |
      sed -e 's,^.*href=",,g' -e 's,".*,,g'
  )
  echo "$base_url/$fname"
}

import_arch_image() {
  # local path="$*"
  # TODO execute in cmd
  return
  # wsl --import ArchLinux %USERPROFILE%\wsl\ArchLinux %USERPROFILE%\wsl\tmp\ArchLinux.tar.gz
  # wsl -d ArchLinux
}

setup_arch() {
  cat <<'EOF' >>/etc/pacmand./mirrorlist
###########################
## Japan
Server = https://ftp.jaist.ac.jp/pub/Linux/ArchLinux/$repo/os/$arch
Server = http://ftp.jaist.ac.jp/pub/Linux/ArchLinux/$repo/os/$arch
Server = http://mirrors.cat.net/archlinux/$repo/os/$arch
Server = http://ftp.tsukuba.wide.ad.jp/Linux/archlinux/$repo/os/$arch
###########################
EOF
  pacman-key --init
  pacman-key --populate archlinux
  pacman -Syuu
  pacman -S base base-devel git vim wget grep sed which unzip gzip reflector --noconfirm

  # uncomment en_US.UTF8 ja_JP.UTF8
  sed -i -e '/en_US.UTF-8/s/^#en/en/' -e '/ja_JP.UTF-8/s/^#ja/ja/' /etc/locale.gen
  # gen locale
  locale-gen
  echo LANG=en_US.UTF-8 >/etc/locale.conf
  echo 'arch' >/etc/hostname

  # fast pacman install
  pacman -S aria2

  local settings_aria2c='XferCommand = /usr/bin/aria2c --allow-overwrite=true --continue=true --file-allocation=none --log-level=error --max-tries=2 --max-connection-per-server=2 --max-file-not-found=5 --min-split-size=5M --no-conf --remote-time=true --summary-interval=60 --timeout=5 --dir=/ --out %o %u'
  sed -i \
    -e 's,^#Color,Color\nILoveCandy,g' \
    -e "s,^\(#XferCommand.*wget.*\),\1\n$settings_aria2c,g" \
    /etc/pacman.conf

  sudo pacman -Syyuu --noconfirm
  sudo pacman -S net-tools inetutils

  # TODO cp from setup_arch
  # setup_user archuser
  # TODO visudo change oneliner from ..

  # login as archuser
  su -u archuser
  curl -fSsL git.io/tr3s | bash
  # todo hackgen add mkdir /usr/share/fonts
  # todo setup ssh to openssh
  chsh archuser -s /usr/bin/zsh

}

main() {
  if [[ -e $dstd ]]; then
    echo "Already exist $dstd." 1>&2
    exit 1
  fi
  local tmp=$dstd/tmp
  mkdir -p $tmp
  cd $tmp
  local f=$(dl_extract_iso)
  import_arch_image "$f"
  # TODO execute in wsl
  setup_arch
}
main "$@"
