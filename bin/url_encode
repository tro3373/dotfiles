#!/usr/bin/env bash

fire() {
  if [[ -p /dev/stdin ]]; then
    cat -
  else
    echo "$@"
  fi
}

main() {
  if [[ $# -eq 0 && ! -p /dev/stdin ]]; then
    echo "Specity url" 1>&2
    exit 1
  fi
  fire "$@" |
    while read -r line; do
      [[ -z $line ]] && continue
      [[ $line =~ ^#.* ]] && continue
      # echo "$line" | curl -Gso /dev/null -w '%{url_effective}' --data-urlencode @- "" | cut -c 2-
      # printf '%s\n' 'Hello World!' | xxd -p | tr -d '\n' | sed 's/../%&/g'
      # echo -e "$line" | xxd -p | tr -d '\n' | sed 's/../%&/g'
      # echo -e "$line" | nkf -WwMQ | sed 's/=$//g' | tr '=' %
      # -R: Read raw input
      # -r: Output raw strings, not JSON-encoded strings
      # -s: Slurp mode: read the entire input stream into a large array
      #     入力全体を配列にまとめる
      echo -e "$line" | jq -sRr @uri
    done
}
main "$@"
