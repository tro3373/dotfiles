#!/usr/bin/env bash

main() {
  set -e
  needs fzf
  docker images |
    grep -v REPOSITORY |
    fzf -m --tac |
    while read -r img tag hash _; do
      [[ -z $img ]] && continue
      [[ $img =~ ^#.* ]] && continue
      echo "==> Removing $img:$tag hash:$hash .." | ink yellow
      echo "====> docker rmi $img:$tag $*" | ink yellow
      docker rmi "$img:$tag" "$@"
    done
}
main "$@"
