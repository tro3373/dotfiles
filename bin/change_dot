#!/bin/bash

src=$1
dst=$2
script_dir=$(cd "$(dirname $0)"; pwd)
mv_to() {
  local rel_p="$1"
  local _src="$src/$rel_p"
  local _dst="$dst/$rel_p"
  if [[ ! -e "$_src" ]]; then
    echo "  ==> No exist mv target [$_src]"
    return
  fi
  mv $_src $_dst
}
main() {
  [ -z $src ] && echo "Usage .. ${0} <srcdir> [<dstdir>]" && exit 1
  [ ! -e $src ] && echo "Specify existing directory." && exit 1
  if [ -z $dst ]; then
    dst=$HOME/.dot
  fi
  if [ ! -d $dst ]; then
    $script_dir/dot
  fi
  mv_to apps/zsh/tmp
  mv_to apps/ssh/.ssh
}
main $src $dst

