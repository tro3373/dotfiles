#!/usr/bin/env -S bash -e

has() { command -v "${1}" >&/dev/null; }
hass() {
  for arg in "$@"; do
    has "$arg" && continue
    echo "No $arg command exist." 1>&2
    exit 1
  done
}
main() {
  hass iconv xxd
  if [[ ! -p /dev/stdin ]]; then
    echo "No stdin" 1>&2
    exit 1
  fi
  cat - |
    while read -N1 c; do
      d=$(echo -n "$c" | iconv -t UCS-2BE | xxd -p)
      if [[ $d == "fffd" ]]; then
        echo -n "$c" |
          iconv -t UCS-4BE |
          xxd -p |
          xargs printf '\\U%s'
      else
        printf '\\u%s' "$d"
      fi
    done
}
main "$@"
