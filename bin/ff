#!/usr/bin/env -S bash -e

readonly _FF_OPT_F=${_FF_OPT_F:-f}
readonly ignored=(.git node_modules bower_components)

has() { command -v "${1}" >&/dev/null; }

findf() {
  local cmd=(find)
  for i in "${ignored[@]}"; do
    # cmd+=("-not \\( -type d -name $i -prune \\)")
    # cmd+=("-not \\( -type d -name $i \\)")
    # cmd+=("\\( ! -type d ! -name $i \\)")
    # cmd+=("\\( -not -type d -not -name $i \\)")
    # cmd+=("-name $i -prune")
    cmd+=("\\( -type d -name $i -prune \\) -o")
  done
  cmd+=("-type $_FF_OPT_F")
  cmd+=("! -name '.'")
  if [[ $# -ne 0 ]]; then
    cmd+=("-name '*${*}*'")
  fi
  cmd+=("-print")
  # cmd+=("-ls")
  # echo -e "${cmd[@]}"
  # shellcheck disable=SC2294
  eval "${cmd[@]}"
}

rgf() {
  rg --files -u . |
    if [[ $# -eq 0 ]]; then
      cat -
    else
      cat - | rg -S "$@"
    fi
}

_ff() {
  if [[ $_FF_OPT_F != f ]]; then
    findf "$@"
    return
  fi
  has rg && rgf "$@" && return
  has pt && pt -g "$@" --nocolor && return
  has ag && ag -g "$@" --nocolor && return
  findf "$@"
}

main() {
  local args=("$@")
  local arg1=$1
  local rel_path=
  if [[ -d $arg1 ]]; then
    # if fist argument is exist directory,
    # we execute command in the directory.
    cd "$arg1" || return
    rel_path=${arg1%/}
    args=("${@:2}")
  fi
  _ff "${args[@]}" |
    sed -e 's,^./,,g' |
    if [[ -z $rel_path ]]; then
      cat -
    else
      cat - | sed -e "s,^,$rel_path/,g"
    fi
}
main "$@"
