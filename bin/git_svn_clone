#!/bin/bash

command_name=$(basename "$0") && readonly command_name
args=()

is_all=0
clone=0
usage() {
  cat <<EOF
Description for this command.
  Usage:
      $command_name [option]
    Options
      -h|--help:
            Show this usage
      -r=<rev>|--rev=<rev>:
            Specify svn revision to clone.(default is latest revision)
            When you want to clone from revision XXX to HEAD, to specify XXX:HEAD
            or specify XXX and do git svn fetch or git svn rebase
      -a|--all:
            fetch all revs(default is only 1 revision)
  Sample svn url for test is ..
    http://svn.apache.org/repos/asf/spamassassin/trunk
EOF
}

has() { command -v "${1}" >&/dev/null; }
# add_args() { args=("${args[@]}" "$@"); }
add_args() { args+=("$@"); }

initialize() {
  while true; do
    [[ -z $1 ]] && break
    case "$1" in
      -h | --help) usage && exit 0 ;;
      -r | --rev) shift && rev=$1 ;;
      -r* | --rev*) rev=${1#*=} ;;
      -a | --all) is_all=1 ;;
      *) add_args "$1" ;;
    esac
    shift
  done
  if ! has svn; then
    echo "No svn command exists. please install it" 1>&2
    exit 1
  fi
  if [[ ${#args[@]} -eq 0 ]]; then
    echo "Specify url .." 1>&2
    exit 1
  fi
}

# get_latest_rev() {
#     local url=$1
#     svn log --limit 1 "$url" \
#         | grep '|' \
#         | awk '{print $1}' \
#         | sed 's/r//g'
# }

# use_init_fetch_ver() {
