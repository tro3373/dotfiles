#!/bin/bash

case `~/dotfiles/bin/dist_ditect` in
    mac | ubuntu)
        if type pwgen > /dev/null 2>&1; then
            pwgen -s 16 1
            exit 0
        fi
        echo "No generator exist.(No pwgen command)" 1>&2
        exit 1
        ;;
    redhat)
        if type expect > /dev/null 2>&1; then
            expect -l 16
            exit 0
        fi
        echo "No generator exist.(No expect command)" 1>&2
        exit 1
        ;;
    *)
        ;;
esac

echo "No generator exist. (No [pwgen,expect] command)" 1>&2
exit 1

