#!/usr/bin/env bash

readonly target=$1
readonly current=$(git symbolic-ref --short HEAD)

main() {
  local prev
  if [[ -z $target ]]; then
    echo "Specify branch or commit" 1>&2
    exit 1
  fi
  local parts="$current..$target"
  git log --no-merges $parts |
    while read -r line; do
      [[ -z $line ]] && continue
      [[ $line =~ ^#.* ]] && continue
      if [[ $line =~ ^commit.* ]]; then
        if [[ -n $prev ]]; then
          echo "=====> git show $prev"
          git --no-pager show $prev
        fi
        prev=$(echo $line |cut -d" " -f2)
        echo '========================================='
      fi
      echo "$line"
    done
}
main "$@"
