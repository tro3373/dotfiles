#!/usr/bin/env bash

has() { command -v ${1} >&/dev/null; }
main() {
  local query="$*"
  if [[ -n $query ]]; then
    query="-q $query"
  fi
  # shellcheck disable=SC2016
  local file=$(
    git status -s |
      fzf $query --preview 'head -100 $(echo {} |cut -c4-)' -0 -1 |
      cut -c4-
  )
  local d=$(dirname $file)
  echo cd $d | clip
}
main "$@"
