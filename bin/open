#!/usr/bin/env bash

current_dir=$(pwd)
_is_url=0
_is_xlsx=0
_is_docx=0

has() { command -v "${1}" >&/dev/null; }
is_url() { [[ $_is_url -eq 1 ]]; }
is_xlsx() { [[ $_is_xlsx -eq 1 ]]; }
is_docx() { [[ $_is_docx -eq 1 ]]; }
set_ostype() {
  _ostype=${OSTYPE}
  os wsl && _ostype=wsl
  os orb && _ostype=orb
}
set_open_command() {
  is_xlsx && has xleak && _open=xleak && return
  is_docx && has doxx && _open=doxx && return
  _open=$(type -a open | grep -v "$0" | head -1 | cut -d' ' -f3)
  case "$_ostype" in
    cygwin*) _open=cygstart ;;
    msys*) _open=explorer ;;
    wsl*)
      _open=explorer.exe
      if is_url; then
        _open=cmd.exe
      fi
      ;;
    orb*) _open=/opt/orbstack-guest/bin/open ;;
    linux*)
      _open=xdg-open
      if ! is_url && has nautilus; then
        _open=nautilus
      fi
      ;;
  esac
}
set_args() {
  args=("$@")
  if [[ $# -eq 0 ]]; then
    args=("$current_dir")
  fi
  if [[ ${args[*]} =~ ^https?://.* ]]; then
    _is_url=1
  fi
  if [[ ${args[*]} =~ ^.*.xlsx? ]]; then
    _is_xlsx=1
  fi
  if [[ ${args[*]} =~ ^.*.docx? ]]; then
    _is_docx=1
  fi

  case "$_ostype" in
    cygwin | msys) args=("$(cygpath -aw "${args[@]}")") ;;
    wsl)
      if is_url; then
        args=("/C" "start" "${args[@]}")
      else
        args=("$(wslpath -w "${args[@]}")")
      fi
      ;;
  esac
}
main() {
  local _ostype args _open
  set_ostype
  set_args "$@"
  set_open_command
  echo "==> open via $_open ${args[*]}" 1>&2
  $_open "${args[@]}" &>/dev/null &
}
main "$@"
