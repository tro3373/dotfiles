#!/usr/bin/env bash

current_dir=$(pwd)

main() {
  local args=("$@")
  if [[ $# -eq 0 ]]; then
    args=("$current_dir")
  fi
  # local _open=open
  local _open=$(type -a open | grep -v $0 | head -1 | cut -d' ' -f3)
  local _ostype=${OSTYPE}
  os wsl && _ostype=wsl
  case "$_ostype" in
    linux*) _open=xdg-open ;;
    cygwin*) _open=cygstart ;;
    msys*) _open=explorer ;;
    wsl*) _open=explorer.exe ;;
  esac
  if [[ $_ostype == "wsl" ]]; then
    args=("$(wslpath -w "${args[@]}")")
  fi
  if [[ $_ostype == "msys" || $_ostype == "cygwin" ]]; then
    args=("$(cygpath -aw "${args[@]}")")
  fi
  echo "==> open ${args[*]}" 1>&2
  $_open "${args[@]}" &>/dev/null &
}
main "$@"
