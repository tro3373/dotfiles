#!/bin/bash

check_os() {
    local result=
    if   [[ -e /etc/debian_version ]] ||
         [[ -e /etc/debian_release ]]; then
        # Check Ubuntu or Debian
        if [[ -e /etc/lsb-release ]]; then
            # Ubuntu
            result="ubuntu"
        else
            # Debian
            result="debian"
        fi
    elif [[ -e /etc/fedora-release ]]; then
        # Fedra
        result="fedora"
    elif [[ -e /etc/redhat-release ]]; then
        # CentOS
        result="redhat"
    elif [[ -e /etc/turbolinux-release ]]; then
        # Turbolinux
        result="turbol"
    elif [[ -e /etc/SuSE-release ]]; then
        # SuSE Linux
        result="suse"
    elif [[ -e /etc/mandriva-release ]]; then
        # Mandriva Linux
        result="mandriva"
    elif [[ -e /etc/vine-release ]]; then
        # Vine Linux
        result="vine"
    elif [[ -e /etc/gentoo-release ]]; then
        # Gentoo Linux
        result="gentoo"
    elif [[ `uname` == "Darwin" ]]; then
        # mac
        result="mac"
    elif [[ "$OSTYPE" == "cygwin" ]]; then
        # mac
        result="cygwin"
    elif [[ "$OSTYPE" == "msys" ]]; then
        # mac
        result="msys"
    else
        # Other
        result="Unkown distribution"
    fi
    echo "$result"
}

handle_args() {
    local os=$1
    local opt=$2
    local result=false
    if [[ "$opt" == "win" ]]; then
        case "$os" in
            cygwin|msys) result=true ;;
        esac
    elif [[ "$opt" == "linux" ]]; then
        case "$os" in
            cygwin|msys|mac) ;;
            *) result=true ;;
        esac
    fi
    echo ${result}
}

# Get Linux distribution name
main() {
    if [[ $# -eq 1 ]] && [[ "$1" == "-v" ]]; then
        cat /etc/issue
        return
    fi
    local os="$(check_os)"
    local result="$os"
    if [[ $# -ne 0 ]]; then
        local result="$(handle_args "$os" "$@")"
    fi
    echo ${result}
}
main "$@"
