#!/usr/bin/env bash

dotpath=~/.dot
current_dir=$(pwd)
script_dir=$(cd $(dirname $0); pwd)
command_name=$(basename $0)
args=()

usage() {
    cat <<EOF
Setup my dev env.
  Usage:
      $command_name [option]
    Options
      -h|--help : Show this usage
EOF
}

has() { which $1 >& /dev/null; }
add_args() { args=("${args[@]}" "$@"); }

initialize() {
    while true; do
        [[ -z $1 ]] && break
        case "$1" in
            -h|--help) usage && exit 0  ;;
            #-f*|--file*) file=${1#*=} ;;
            #-f|--file) shift && file=$1 ;;
            *) add_args "$1"            ;;
        esac
        shift
    done
    all_args="${args[@]}"
}

main() {
    initialize "$@"
    for arg in "${args[@]}"; do
        echo "Arguments: $arg"
    done
    echo $file
}
main "$@"

