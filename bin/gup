#!/usr/bin/env -S bash -e
#

_log() {
  # shellcheck disable=SC2145
  echo "$(date +"%Y-%m-%d %H:%M:%S") ${@:2}" | ink "$1"
}
log() { _log yellow "$*"; }
error() {
  _log red "$*"
  exit 1
}

main() {
  local changes
  changes=$(git status -s | wc -l)
  if [[ $changes -ne 0 ]]; then
    git add -A
    git commit -m 'update'
  fi
  git push
}
main "$@"
