#!/usr/bin/env bash

current_dir=$(pwd)
script_dir=$(cd $(dirname $0); pwd)

secret=~/.secret

main() {
    if [[ ! -e $secret ]]; then
        echo "No secret exists." 1>&2
        exit 1
    fi
    local arg="$@"
    if [[ -n $arg ]]; then
        cat $secret |grep "$arg" --color=auto
    else
        cat $secret
    fi
}

main "$@"

