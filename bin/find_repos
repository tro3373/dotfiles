#!/usr/bin/env bash

readonly root_dirs=("$HOME"/ghq "$HOME"/src)
readonly depth=4

main() {
  for d in "${root_dirs[@]}"; do
    # echo "==> $d"
    find $d/ -maxdepth $depth -type d -name '.git' |
      while read -r line; do
        [[ -z $line ]] && continue
        [[ $line =~ ^#.* ]] && continue
        local dir=$(dirname $line)
        local remote=$(cd $dir && git remote get-url origin 2>/dev/null)
        echo -e "$dir\t$remote"
      done
  done
}
main "$@"
