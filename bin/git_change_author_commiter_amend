#!/bin/bash

name="$1"
mail="$2"
while [[ "$name" == "" ]]; do
    echo "Input name for convert to..."
    read name
done
while [[ "$mail" == "" ]]; do
    echo "Input mail for convert to..."
    read mail
done
main() {
    echo "Change recentry commit commiter author to below name mail"
    echo "name: $name"
    echo "mail: $mail"
    echo "Are you ready? type any key..."
    read waituserkey
    git commit --amend --author="$name <$mail>"
}
main
