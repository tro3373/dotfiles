#!/usr/bin/env bash

#current_dir=$(pwd)
#script_dir=$(cd "$(dirname $0)"; pwd)
has() { command -v ${1} >&/dev/null; }
sub() {
  if [[ ! -e $f ]]; then
    echo "=> No such file exist. $f" 1>&2
    return
  fi
  echo "=> Changing Owner $u.$g $f with R option...(Enter to continue)" 1>&2
  read _
  sudo chown -R $u.$g $f
}
main() {
  local u=$(id -u -n)
  local g=$(id -g -n)
  if [ -p /dev/stdin ]; then
    while read -r f; do sub; done
  else
    for f in "$@"; do sub; done
  fi
}
main "$@"
