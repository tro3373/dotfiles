#!/usr/bin/env bash

has() { command -v ${1} >&/dev/null; }
echo_if_valid() {
  [[ -z $f ]] && return
  [[ $f =~ ^#.* ]] && return
  [[ -d "$f" ]] && return
  [[ ! -e $f ]] && return
  echo "$f"
}

fire() {
  if [[ -p /dev/stdin ]]; then
    # https://superuser.com/questions/380772/removing-ansi-color-codes-from-text-stream
    cat - |
      sed -e 's,\*,,g' -e 's/\x1b\[[0-9;]*[a-zA-Z]//g' |
      while read -r f; do
        echo_if_valid
      done
  else
    ff
  fi
}

fire_files() {
  local query="$*"
  if [[ -n $query ]]; then
    query="-q $query"
  fi
  fire | fzf -m $query --preview 'head -100 {}' --select-1 --exit-0
}

main() {
  ! has fzf && echo "No fzf exist" 1>&2 && exit 1
  local files=$(fire_files "$@")
  nvim -p $files </dev/tty
  # vim -p $files </dev/tty
}
main "$@"
