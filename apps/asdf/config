#!/usr/bin/env bash

install_common() {
  # go_install github.com/asdf-vm/asdf/cmd/asdf@v0.16.2
  platform=$(get_platform)
  arch=$(get_arch)
  dl_gh_release asdf-vm/asdf latest "*${platform}-${arch}.tar.gz"
  exe 'tar -xzf asdf-*.tar.gz'
  exe 'sudo cp asdf /usr/local/bin/'
}
