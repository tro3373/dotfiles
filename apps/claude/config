#!/usr/bin/env bash

install_common() {
  exe 'curl -fsSL https://claude.ai/install.sh | bash'
  # npm_install @anthropic-ai/claude-code
  # suggest
}

suggest() {
  if [[ -e ~/.npm-global ]]; then
    return
  fi
  log "==> Execute 'setup_npm_global' first and Re-Install."
}

# install_mac() {
#   exe brew install --cask claude
# }

setting_common() {
  log "==> claude"
  log "===> /init"
  local src_settings="$HOME/.mo/.claude/settings.json"
  if [[ -e $src_settings ]]; then
    make_lnk_with_bkup "$src_settings" "$HOME/.claude/settings.json"
  fi
  show_usage
}

show_usage() {
  cat <<'EOF'
/plugin marketplace add anthropics/skills
  /plugin install document-skills@anthropic-agent-skills
  /plugin install example-skills@anthropic-agent-skills
# https://x.com/_catwu/status/1993791353051074687?t=pVVyagazUFIcfG33Xb5PHw&s=09
/plugin marketplace add anthropics/claude-code
  /plugin install frontend-design@claude-code-plugins
EOF
}
