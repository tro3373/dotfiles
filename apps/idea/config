#!/usr/bin/env bash

scoop_idea=IntelliJ-IDEA
mac_cmd="/Applications/IntelliJ IDEA CE.app/Contents/MacOS/idea"

create_bin_cmd() {
  # shellcheck disable=SC2154
  local _dst="$HOME/bin/$app"
  cat_bin_cmd |
    cat_tee "$_dst"
  exe chmod +x "$_dst"
}

cat_bin_cmd() {
  cat <<EOF
#!/usr/bin/env -S bash -e

nohup "$mac_cmd" "\$@" >&/tmp/$app.log &
EOF
}
install_common() { not_supported; }
install_wsl() {
  install_arch
}
install_arch() {
  def_install intellij-idea-community-edition
}
install_msys() {
  exe scoop install $scoop_idea
}
install_cygwin() { not_supported; }
install_mac() {
  def_install --cask intellij-idea-ce
  create_bin_cmd
}
install_ubuntu() { not_supported; }
install_redhat() { not_supported; }
setting_common() { no_settings; }
setting_wsl() {
  # shellcheck disable=SC2154
  make_lnk_with_bkup "$app_dir/_ideavimrc" "$WINHOME/_ideavimrc"
  make_lnk_with_bkup "$app_dir/_ideavimrc" "$HOME/_ideavimrc"
}
setting_arch() {
  make_lnk_with_bkup "$app_dir/_ideavimrc" "$HOME/_ideavimrc"
}
setting_msys() {
  setting_wsl
}
setting_cygwin() { no_settings; }
setting_mac() {
  make_lnk_with_bkup "$app_dir/_ideavimrc" "$HOME/_ideavimrc"
}
setting_ubuntu() { no_settings; }
setting_redhat() { no_settings; }
