		if is_dummy; then
			log "===> below stdin will be pass to '\$*'"
			cat -
			log "------------------------------------"
		else
			log ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
			printf "> Executing: \$*\n"
			log ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
