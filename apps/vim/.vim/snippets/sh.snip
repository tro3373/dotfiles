snippet	interactive2
	interactive2() {
		local variable msg input_word yesno
		variable=$1
		msg=$2
		input_word=
		yesno=x

		while [[ "$input_word" == "" ]]; do
			echo "$msg"
			read input_word
			echo
			while [[ ! "$yesno" =~ [yYnN]  ]]; do
				echo "Are you ok?(y/N) input: ${input_word}"
				read yesno
			done
			if [[ $yesno =~ [nN] ]]; then
				input_word=
				yesno=
			else
				break
			fi
		done
		eval "$variable=$input_word"
	}

