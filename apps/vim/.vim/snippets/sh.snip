snippet	confirm
	confirm() {
		message=\${1:-"Are you ready?"}
		message="${message} (y/N)"
		echo -e "$message"
		read yesno
		if [[ ! "$yesno" =~ (y|Y) ]]; then
			echo "==> proc canceled. terminate this proc."
			exit 1
		fi
	}

