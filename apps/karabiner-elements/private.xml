<?xml version="1.0"?>
<root>
  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_APP_Terminal</name>
    <url type="file">/Applications/Utilities/Terminal.app</url>
  </vkopenurldef>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_APP_Finder</name>
    <url type="file">/System/Library/CoreServices/Finder.app</url>
  </vkopenurldef>

  <item>
    <name>Change control*2 to launch Terminal</name>
    <identifier>private.double_control</identifier>
    <autogen>
      __DoublePressModifier__
      KeyCode::CONTROL_L,
      KeyCode::CONTROL_L,
      KeyCode::VK_OPEN_URL_APP_Terminal
    </autogen>
  </item>

  <item>
    <name>Change command*2 to launch Finder</name>
    <identifier>private.double_command</identifier>
    <autogen>
      __DoublePressModifier__
      KeyCode::COMMAND_L,
      KeyCode::COMMAND_L,
      KeyCode::VK_OPEN_URL_APP_Finder
    </autogen>
  </item>
</root>
